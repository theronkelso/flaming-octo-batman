extends layout

block content
  h1= title
  p Welcome to #{title}
  a(href="/newuser") Add

  //WRAPPER
  #wrapper

    //USER INFO
    #userInfo
      h2 User Info
      p
        strong Userame:
        | <span id='userName'></span>
        br
        strong Name:
        | <span id='userInfoName'></span>
        br
        strong Age:
        | <span id='userInfoAge'></span>
        br
        strong Gender:
        | <span id='userInfoGender'></span>
        br
        strong Email:
        | <span id='userEmail'></span>
        br
        strong Location:
        | <span id='userInfoLocation'></span>
    // /USER INFO

    //USER LIST
    h2 User List
    #userList
      table
        thead
          th UserName
          th Email
          th Delete?
        tbody
    // /USER LIST

    //ADD USER
    h2 Add User
    #addUser
      fieldset
        input#inutUserName(type='text', placeholder='username')
        input#inutUserEmail(type='text', placeholder='email')
        br
        input#inutUserFullname(type='text', placeholder='Full Name')
        input#inutUserAge(type='text', placeholder='Age')
        br
        input#inutUserLocation(type='text', placeholder='Location')
        input#inutUserGender(type='text', placeholder='Gender')
        br
        button#btnAddUser Add User

  // /WRAPPER
